<div class="header container">
    <h1>Eat Da Burger</h1>
</div>

<div class="container">
    <div class="col-4">
        <img src="assets/img/burger2.jpg">
    </div>
    <div class="col-8 text">
        <div class="container">
            <div class="col-6 list">
                <h2>Burgers to Eat</h2>

                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> devour_burger devoured=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-6">
                <h2>Burgers You Have Eaten</h2>

                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> eaten_burgers}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="container">
            <div class="col-12">
                <h2>Add a Burger</h2>
                <form class="create-form">

                    <div class="form-group">
                        <label for="burgerNew">Burger Name:</label>
                        <input type="text" id="burgerNew" name="name">
                    </div>

                    <button type="submit">Make This Burger!</button>
                </form>
            </div>
        </div>
    </div>
</div>